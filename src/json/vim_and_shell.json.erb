{
    "title": "Vi and Shell",
    "rules": [
        {
            "description": "Remap Caps to Fn",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from('caps_lock', [], ['any']) %>,
                    "to": <%= to([["fn"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from('1', ['fn'], ['any']) %>,
                    "to": <%= to([["f1"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from('2', ['fn'], ['any']) %>,
                    "to": <%= to([["f2"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from('3', ['fn'], ['any']) %>,
                    "to": <%= to([["f3"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from('4', ['fn'], ['any']) %>,
                    "to": <%= to([["f4"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from('5', ['fn'], ['any']) %>,
                    "to": <%= to([["f5"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from('6', ['fn'], ['any']) %>,
                    "to": <%= to([["f6"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from('7', ['fn'], ['any']) %>,
                    "to": <%= to([["f7"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from('8', ['fn'], ['any']) %>,
                    "to": <%= to([["f8"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from('9', ['fn'], ['any']) %>,
                    "to": <%= to([["f9"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from('0', ['fn'], ['any']) %>,
                    "to": <%= to([["f10"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from('hyphen', ['fn'], ['any']) %>,
                    "to": <%= to([["f11"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from('equal_sign', ['fn'], ['any']) %>,
                    "to": <%= to([["f12"]]) %>
                }
            ]
        },

        {
            "description": "Change Fn + h/j/k/l to Arrows",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("h", ['fn'], ['shift', 'option', 'caps_lock', 'command', 'control']) %>,
                    "to": <%= to([["left_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("j", ['fn'], ['shift', 'option', 'caps_lock', 'command', 'control']) %>,
                    "to": <%= to([["down_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("k", ['fn'], ['shift', 'option', 'caps_lock', 'command', 'control']) %>,
                    "to": <%= to([["up_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("l", ['fn'], ['shift', 'option', 'caps_lock', 'command', 'control']) %>,
                    "to": <%= to([["right_arrow"]]) %>
                }
            ]
        },

        {
            "description": "Moving in bash style (https://clementc.github.io/blog/2018/01/25/moving_cli/)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("b", ['option'], ['caps_lock']) %>,
                    "to": <%= to([["left_arrow", "option"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("f", ['option'], ['caps_lock']) %>,
                    "to": <%= to([["right_arrow", "option"]]) %>
                }
            ]
        },
        {
            "description": "Erase in bash style (https://clementc.github.io/blog/2018/01/25/moving_cli/)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("w", ['control'], ['caps_lock']) %>,
                    "to": <%= to([["delete_or_backspace", "option"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("d", ['option'], ['caps_lock']) %>,
                    "to": {
                        "key_code": "delete_or_backspace",
                        "modifiers": [
                            "option",
                            "fn"
                        ]
                    }
                }
            ]
        },

        {
            "description": "Remap Esc+Cmd and Esc+Fn",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from('escape', ['fn'], ['any']) %>,
                    "to": <%= to([["grave_accent_and_tilde"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from('escape', ['command'], ['shift']) %>,
                    "to": {
                        "key_code": "grave_accent_and_tilde",
                        "modifiers": ["command"]
                    }
                }
            ]
        }


    ]
}
